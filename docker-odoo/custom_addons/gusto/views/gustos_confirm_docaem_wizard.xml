<odoo>
    <record id="view_confirm_docaem_wizard_form" model="ir.ui.view">
        <field name="name">gusto.confirm.docaem.wizard.form</field>
        <field name="model">gusto.confirm.docaem.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmar Creación de Registros">
                <group>
                    <span>¿Desea generar registros en gusto.docaem basados en los participantes seleccionados?"</span>
                </group>
                <footer>
                    <button string="Confirmar" type="object" name="confirm_creation" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
